{
    "editor.lineNumbers": "relative",
    "latex-workshop.view.pdf.viewer": "tab",
    "editor.mouseWheelZoom": true,
    "window.zoomLevel": -1,
    "editor.renderWhitespace": "none",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    // adding latex and haskell comment in regex
    "todo-tree.regex": "((//|--|#|%|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.labelFormat": "${after}",
    "todo-tree.grouped": true,
    "todo-tree.regexCaseSensitive": false,
    "todo-tree.showCountsInTree": true,
    "todo-tree.statusBar": "top three",
    "workbench.iconTheme": "vscode-icons",
    "files.associations": {
        "*.mlf": "clojure"
    },
    // "editor.tokenColorCustomizations": {
    //     "textMateRules": [
    //         {
    //             "name": "User-defined constant",
    //             "scope": [
    //                 // "constant.character.haskell",
    //                 // "constant.other.haskell",
    //             ],
    //             "settings": {
    //                 "foreground": "#FFCB6B",
    //             }
    //         }
    //     ],
    // },
    "editor.fontFamily": "'Fira Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.lineHeight": 23,
    "window.menuBarVisibility": "default",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": false,
    "breadcrumbs.enabled": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // "vim.useSystemClipboard": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "vim.useCtrlKeys": false,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "U"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
        }
    ],
    "workbench.colorTheme": "Solarized Light",
    "explorer.confirmDelete": false,
    "todo-tree.ripgrepMaxBuffer": 3000,
}